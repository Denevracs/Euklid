{
  "name": "euclid-network",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "turbo run dev --parallel --filter=@euclid/web --filter=@euclid/api",
    "build": "turbo run build --filter=@euclid/web --filter=@euclid/api",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "typecheck": "turbo run typecheck",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:generate": "prisma generate",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "heroku-postbuild": "pnpm --filter @euclid/web build"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@euclid/eslint-config": "workspace:*",
    "@prisma/client": "^5.22.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0-canary.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "turbo": "^1.12.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext .js,.jsx,.ts,.tsx --fix"
    ],
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
